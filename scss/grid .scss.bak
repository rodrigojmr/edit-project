.grid {
    max-width: 1440px;
    width: 95%;
    margin: auto;
    .grid-container {
        display: grid;
        height: 1000px;
        grid-template-columns: 25% 25% 25% 25%;
        grid-template-rows: 33% 33% 33%;
        align-items: center;
        div {
        text-align: center;
        padding: 20px 40px;
        }
        .item1 {
            grid-column: 1;
            grid-row-start: 1;
            grid-row-end: 3;
        }
        .item7 {
            grid-column: 4;
            grid-row-start: 2;
            grid-row-end: 4;
        }
     }
}

